.bike_show-category-contents
  .bike_show-category-header
    .bike_path-text
      = link_to "<", bike_machines_path, :class => "bike"
    %h1.header-title
      BIKE
  .bike_show-snap 
    - @machine.each do |machine|
      .snap
        %ul.post-header
          %li
            = link_to user_path(machine.user_id) do
              .icon-image
                = image_tag "IMG_1351.JPG", :class=> "bike_show-image"
          %li
            = link_to user_path(machine.user_id) do
              .user-name
                = machine.user.user_name
          - if current_user.id == machine.user_id
            %ul.syncer-acdn
              %li
                = link_to "編集", edit_machine_path(machine.id)
              %li
                = link_to "削除",  machine_path(machine.id), method: :delete
        = image_tag machine.image
        .snap-content
          .display-form
            .user-name
              = machine.user.user_name
            .snap-text
              = machine.charm
          %p.snap-date
            = l machine.created_at, format: :short