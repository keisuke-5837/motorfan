  %body
    %header#header
      %h1.site-title
        motorfan
      %nav#navi
        .current_user
          = current_user.user_name
        %ul.nav-menu
          - if user_signed_in?
            %li
              = link_to "MY MENU", user_path(current_user.id), class: "user-show"
          %li
            %a
              = link_to "CAR", car_machines_path
          %li
            = link_to "BIKE", bike_machines_path
        %ul.nav-info
          - if user_signed_in?
            %li
              = link_to '新規投稿', new_machine_path, class: "logout"
            %li
              = link_to 'ログアウ', destroy_user_session_path, method: :delete, class: "logout"
          -else
            %li
              = link_to 'ログイン', new_user_session_path, class: "sign_in"
            %li
              = link_to '新規登録', new_user_registration_path, class: "sign_up"
          %li
            = link_to 'お問い合わせ', "#", class: "info"

      .toggle_btn
        %span
        %span
        %span

      #mask

    %main#main
      = image_tag "2B6D54DB-BCC6-4633-A78F-2C9DE3937008.jpg", class: "top-image"
      %h2.news-title
        NEWS
      %section#news
        %ul.slick-area
          %li
            = image_tag "69cfd184814a841fdd974fe07449f41a.jpg", alt:"走行会１ test", size: "300x200"
          %li
