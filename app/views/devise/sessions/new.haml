= form_with model: @user, url: user_session_path, class: "login-main", local: true do |f|
  .form-wrap
    .form-header
      %h1.root_path-text
        = link_to "×", root_path, :class => "info"
  .info-text
    %h1.text
      ログイン

  .new-form
    .form-group
      .form-text-wrap
        %label.form-text
          メールアドレス
      = f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true
      -if @user.errors.include?(:email)
        %p= @user.errors.full_messages_for(:email).first
    .form-group
      .form-text-wrap
        %label.form-text
          パスワード
      = f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"
      -if @user.errors.include?(:password)
        %p= @user.errors.full_messages_for(:password).first
    .register-btn
      = f.submit "ログイン", class:"register-green-btn"