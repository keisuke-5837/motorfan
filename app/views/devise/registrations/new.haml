= form_with model: @user, url: user_registration_path, class: "registration-main", local: true do |f|
  .form-wrap
    .form-header
      %h1.root_path-text
        = link_to "×", root_path, :class => "motorfan"
  .info-text
    %h1.text
      ユーザー登録

  -# = render 'shared/error_messages', model: f.object 
  .new-form
    .form-group
      .form-text-wrap
        %label.form-text
          ユーザーネーム
      = f.text_field :user_name, class:"input-default", id:"user_name", placeholder:"ユーザーネーム"
      -if @user.errors.include?(:user_name)
        %p= @user.errors.full_messages_for(:user_name).first
    .form-group
      .form-text-wrap
        %label.form-text
          メールアドレス
      = f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true
      -if @user.errors.include?(:email)
        %p= @user.errors.full_messages_for(:email).first
    .form-group
      .form-text-wrap
        %label.form-text
          パスワード
      = f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"
      -if @user.errors.include?(:password)
        %p= @user.errors.full_messages_for(:password).first
    .form-group
      .form-text-wrap
        %label.form-text
          パスワード(確認)
      = f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい"
      -if @user.errors.include?(:password_confirmation)
        %p= @user.errors.full_messages_for(:password_confirmation).first
    .form-group
      .form-text-wrap
        %label.form-text
          電話番号
      = f.text_field :phone_number, class:"input-default", id:"phone_number", placeholder:"例)09012345678"
      -if @user.errors.include?(:phone_number)
        %p= @user.errors.full_messages_for(:phone_number).first
    .register-btn
      = f.submit "会員登録", class:"register-red-btn"
  